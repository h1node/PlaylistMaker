<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/search_activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/settings_activity_margin"
            android:layout_marginTop="@dimen/settings_activity_margin"
            android:src="@drawable/arrow_back_24"
            app:tint="@color/colorLightNight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/settings_activity_margin"
            android:text="@string/search"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/title_size_26sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp">

        <EditText
            android:id="@+id/searchEditText"
            style="@style/search_background"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edittext_radius"
            android:drawableStart="@drawable/search"
            android:drawablePadding="@dimen/drawablePadding_10dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:lines="1"
            android:padding="@dimen/padding_14dp"
            android:textColor="@color/YP_Black"
            android:textColorHint="@color/YP_Black" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/padding_14dp"
            android:src="@drawable/close_24"
            android:visibility="gone"
            app:tint="@color/YP_Black" />

    </FrameLayout>

</LinearLayout>