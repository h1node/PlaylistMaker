<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.media.fragments.PlayListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddPlaylist"
            style="@style/playlist_btn"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="@string/new_playlist" />

        <ImageView
            android:id="@+id/placeholderImagePlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_playlist_placeholder_46dp"
            android:src="@drawable/music_error" />

        <TextView
            android:id="@+id/textEmptyPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/playlist_text"
            android:textColor="@color/colorLightNight"
            android:textSize="@dimen/YS_medium_19sp" />
    </LinearLayout>
</FrameLayout>