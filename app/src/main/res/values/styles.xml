<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/YP_White</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_layout</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/YP_Black</item>
    </style>

    <style name="SettingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_activity_frame</item>
        <item name="android:layout_marginStart">@dimen/margin_start_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
        <item name="android:textSize">@dimen/setting_text_size_activity</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="radius">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="refresh_button">
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/colorLightNight</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MusicItem">
        <item name="android:textSize">@dimen/setting_text_size_activity</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="clear_button">
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/colorLightNight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="LabelText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AudioPlayerText">
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/colorLightNight</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
    </style>

</resources>